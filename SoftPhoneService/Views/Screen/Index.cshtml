@model SoftPhoneService.Models.LoginVM
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<form method="post">
    <table>
        <tr>
            <td>用户名：</td>
            <td>
                @Html.TextBoxFor(x => x.UserName)
            </td>
        </tr>
        <tr>
            <td>密码：</td>
            <td>
                @Html.PasswordFor(x => x.PWD)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="登录" /></td>
        </tr>
    </table>
</form>
